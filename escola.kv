<Gerenciador>:
    MenuInicial:
        name: 'Tela inicial'
    AdicionaAlunoTela:
        name: 'Adiciona aluno'
    BuscaAlunoTela:
        name: 'Busca aluno'
    ListaAlunosTela:
        name: 'Lista alunos'
    ExcluiAlunoTela:
        name: 'Exclui aluno'

<MenuInicial>:
    BoxLayout:
        orientation: 'vertical'
        padding: 120
        spacing: 10 
        canvas.before:
            Color:
                rgba: 1,1,1,1
            Rectangle:
                pos: self.pos
                size: self.size
        Image:
            size_hint_y: None
            height: 100
            allow_stretch: True
            source: 'Images/teacher.png'
        BotaoInicial:
            text: 'Adicionar aluno(a)'
            font_size: 30
            font_name: 'Fonts/UbuntuMono-R'
            color: 0,0,0,0.8
            on_release: app.root.current = 'Adiciona aluno'
        BotaoInicial:
            text: 'Buscar aluno(a)'
            font_size: 30
            font_name: 'Fonts/UbuntuMono-R'
            color: 0,0,0,0.8
            on_release: app.root.current = 'Busca aluno'
        BotaoInicial:
            text: 'Lista de alunos'
            font_size: 30
            font_name: 'Fonts/UbuntuMono-R'
            color: 0,0,0,0.8
            on_release: app.root.current = 'Lista alunos'
        BotaoInicial:
            text: 'Excluir aluno(a)'
            font_size: 30
            font_name: 'Fonts/UbuntuMono-R'
            color: 0,0,0,0.8
            on_release: app.root.current = 'Exclui aluno'
        BotaoInicial:
            text: 'Desligar programa'
            font_size: 30
            font_name: 'Fonts/UbuntuMono-R'
            color: 0,0,0,0.8
            on_release: root.confirmacao()


<AdicionaAlunoTela@Screen>:
    canvas.before:
        Color:
            rgba: 1,1,1,1
        Rectangle:
            pos: self.pos
            size: self.size
    BoxLayout:
        orientation: 'vertical'
        ActionBar:
            canvas:
                Color:
                    rgba: 74/245, 188/245, 150/245,1
                Rectangle:
                    pos: self.pos
                    size: self.size
            ActionView:
                ActionPrevious:
                    title: 'Adiciona aluno(a)'
                    color: 0.1,0.1,0.1
                    on_release: app.root.current = 'Tela inicial'
                ActionButton:
                    text: 'Sair'
                    color: 0.1,0.1,0.1
                    on_release: app.root.Sair()
        BoxLayout:
            orientation: 'vertical'
            spacing: 20
            padding: 20
            BoxLayout:
                spacing: 10
                orientation: 'horizontal'
                size_hint_y: None
                height: 40
                Label:
                    size_hint_x: None
                    widht: 160
                    text: 'Nome:'
                    color: 0.1,0.1,0.1
                    font_size: 23
                    font_name: 'Fonts/UbuntuMono-R'
                TextInput:
                    id: Nome
                    size_hint_x: None
                    width: 450
                    write_tab: False
                    hint_text: 'Primeiro nome do(a) aluno(a)'
                    font_size: 18
                    font_name: 'Fonts/UbuntuMono-R'
            BoxLayout:
                orientation: 'horizontal'
                size_hint_y: None
                height: 40
                spacing: 10
                Label:
                    size_hint_x: None
                    widht: 160
                    text: 'Sobrenome:'
                    color: 0.1,0.1,0.1
                    font_size: 20
                    font_name: 'Fonts/UbuntuMono-R'
                TextInput:
                    id: Sobrenome
                    size_hint_x: None
                    width: 450
                    write_tab: False
                    hint_text: 'Sobrenome do(a) aluno(a)'
                    font_size: 18
                    font_name: 'Fonts/UbuntuMono-R'            
            BoxLayout:
                orientation: 'horizontal'
                size_hint_y: None
                height: 40
                spacing: 10
                Label:
                    size_hint_x: None
                    widht: 160
                    text: 'Celular:'
                    color: 0.1,0.1,0.1
                    font_size: 23
                    font_name: 'Fonts/UbuntuMono-R'
                TextInput:
                    id: Celular
                    size_hint_x: None
                    width: 450
                    hint_text: 'Sem espaços nem caracteres especiais'
                    font_size: 18
                    write_tab: False
                    font_name: 'Fonts/UbuntuMono-R'
            BoxLayout:
                orientation: 'horizontal'
                size_hint_y: None
                height: 40
                spacing: 10
                Label:
                    size_hint_x: None
                    widht: 160
                    text: 'CEP:'
                    color: 0.1,0.1,0.1
                    font_size: 23
                    font_name: 'Fonts/UbuntuMono-R'
                TextInput:
                    id: CEP
                    size_hint_x: None
                    width: 450
                    hint_text: 'Sem espaços nem caracteres especiais'
                    font_size: 18
                    write_tab: False
                    font_name: 'Fonts/UbuntuMono-R'
                Button:
                    background_normal: 'Images/map.png'
                    border: 0,0,0,0
                    size_hint: None, None
                    size: 45,45
                    on_release: root.VerificaCep()
            BoxLayout:
                orientation: 'horizontal'
                size_hint_y: None
                height: 40
                spacing: 10
                Label:
                    size_hint_x: None
                    widht: 160
                    text: 'Logradouro:'
                    color: 0.1,0.1,0.1
                    font_size: 15
                    font_name: 'Fonts/UbuntuMono-R'
                Label:
                    id: Rua
                    size_hint_x: None
                    width: 450
                    hint_text: 'Sem espaços nem caracteres especiais'
                    font_size: 18
                    color: 0,0,0
                    write_tab: False
                    font_name: 'Fonts/UbuntuMono-R'
            BoxLayout:
                orientation: 'horizontal'
                size_hint_y: None
                height: 40
                spacing: 10
                Label:
                    size_hint_x: None
                    widht: 160
                    text: 'Bairro:'
                    color: 0.1,0.1,0.1
                    font_size: 15
                    font_name: 'Fonts/UbuntuMono-R'
                Label:
                    id: Bairro
                    size_hint_x: None
                    width: 450
                    hint_text: 'Sem espaços nem caracteres especiais'
                    font_size: 18
                    color: 0,0,0
                    write_tab: False
                    font_name: 'Fonts/UbuntuMono-R'
            BoxLayout:
                padding: 15
                BoxLayout:
                Button:
                    background_normal: 'Images/folder.png'
                    border: 0,0,0,0
                    size_hint: None, None
                    heigth: 88
                    width: 100
                    on_release: root.defineVariaveis()


<ListaAlunosTela@Screen>:
    canvas.before:
        Color:
            rgba: 243/235,154/235,108/235,1
        Rectangle:
            pos: self.pos
            size: self.size
    BoxLayout:
        orientation: 'vertical'
        ActionBar:
            canvas:
                Color:
                    rgba: 74/245, 188/245, 150/245,1
                Rectangle:
                    pos: self.pos
                    size: self.size
            ActionView:
                ActionPrevious:
                    title: 'Lista aluno(a)'
                    color: 0.1,0.1,0.1
                    on_release: app.root.current = 'Tela inicial'
                ActionButton:
                    text: 'Sair'
                    color: 0.1,0.1,0.1
                    on_release: app.root.Sair()
        ScrollView:
            BoxLayout:
                orientation: 'vertical'
                spacing: 1
                id: bigbox
                size_hint_y: None 
                height: self.minimum_height
                

<BuscaAlunoTela@Screen>:
    BoxLayout:
        spacing:7
        orientation: 'vertical'
        canvas:
            Color:
                rgb: 224/255,228/255,204/255
            Rectangle:
                pos: self.pos
                size: self.size
        ActionBar:
            canvas:
                Color:
                    rgb: 243/255,134/255,48/255
                Rectangle:
                    pos: self.pos
                    size: self.size
            ActionView:
                ActionPrevious:
                    title: 'Buscar aluno(a)'
                    color: 0.1,0.1,0.1
                    on_release: app.root.current = 'Tela inicial'
                ActionButton:
                    text: 'Sair'
                    color: 0.1,0.1,0.1
                    on_release: app.root.Sair()
        BoxLayout:
            orientation: 'vertical'
            BoxLayout:
                orientation: 'vertical'
                spacing: 20
                BgTexto:
                    text: 'Qual aluno deseja buscar?'
                    font_name: 'Fonts/UbuntuMono-R'
                    font_size: 29
                    size_hint_y: None
                    size_hint_x: None
                    width: 450
                    height: 60
                    pos_hint: {'top': 1}
                BoxLayout:
                    spacing: 5
                    size_hint_x: None
                    size_hint_y: None
                    width: 350
                    size_hint: 0.5,0.1
                    TextInput:
                        id: Aluno
                        hint_text:  'Digite qualquer informação do(a) aluno(a)'
                        multiline: False
                    Button:
                        background_normal: 'Images/procurar.png'
                        border: 0,0,0,0
                        size_hint: None, None
                        width: 39
                        height: 39
                        on_release: root.busca()
                BoxLayout:
                    ScrollView:
                        BoxLayout:
                            orientation: 'vertical'
                            spacing: 1
                            id: bigbox
                            size_hint_y: None 
                            height: self.minimum_height

                    
