                        width: 450
                        hint_text: 'Sem espaços nem caracteres especiais'
                        font_size: 18
                        color: 0,0,0
                        write_tab: False
                        font_name: 'Fonts/UbuntuMono-R'
                BoxLayout:
                    orientation: 'horizontal'
                    size_hint_y: None
                    height: 40
                    spacing: 10
                    Label:
                        size_hint_x: None
                        widht: 160
                        text: 'Bairro:'
                        color: 0.1,0.1,0.1
                        font_size: 15
                        font_name: 'Fonts/UbuntuMono-R'
                    Label:
                        id: Bairro
                        size_hint_x: None
                        width: 450
                        hint_text: 'Sem espaços nem caracteres especiais'
