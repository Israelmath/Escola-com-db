<BotaoInicial@ButtonBehavior+Label>
    canvas.before:
        Color:
            rgba: 235/235,149/235,50/235,1
        Ellipse:
            pos: self.pos
            size: self.height, self.height
        Ellipse:
            pos: self.x+self.width-self.height,self.y
            size: self.height, self.height
        Rectangle:
            pos: self.x+self.height/2.0, self.y
            size: self.width-self.height,self.height


<Aluno>
    size_hint_y: None
    height: 100
    canvas:
        Color:
            rgba: 1,1,1,1
        Rectangle:
            pos: self.pos
            size: self.size
    BoxLayout:
        id: box
        orientation: 'vertical'
        BoxLayout:
            orientation: 'horizontal'
            size_hint_x: None
            width: 60
            Label:
                id: Identificador
                font_name: 'Fonts/UbuntuMono-R'
                font_size: 22
                color: 0,0,0
        BoxLayout:
            orientation: 'horizontal'
            size_hint: 0.5,1
            Label:
                id: Nome
                font_name: 'Fonts/UbuntuMono-R'
                font_size: 30
                color: 0,0,0
            Label:
                id: Sobrenome
                font_name: 'Fonts/UbuntuMono-R'
                font_size: 30
                color: 0,0,0
        BoxLayout:
            orientation: 'horizontal'
            size_hint_x: None
            width: 275
            Label:
                id: Celular
                halign: 'left'
                font_name: 'Fonts/UbuntuMono-R'
                font_size: 18
                color: 0,0,0
            Label:
                id: Cep
                font_name: 'Fonts/UbuntuMono-R'
                font_size: 18
                color: 0,0,0
    BoxLayout:
        orientation: 'vertical'
        size_hint: 0.5,1
        Button:
            text: 'Nome'
            on_release: root.teste()
        Button:
            text: 'Sobrenome'
            on_release: root.teste1()



<BgTexto@Label>
    canvas.before:
        Color:
            rgb: 250/255,105/255,0
        Ellipse:
            pos: self.x+self.width-40, self.y+self.height-40
            size: 40,40
        Ellipse:
            pos: self.x+self.width-40, self.y
            size: 40,40
        Rectangle:
            pos: self.x, self.y
            size: self.width-20, self.height
        Rectangle:
            pos: self.x+self.width-40, self.y+20
            size: 40,self.height-40
