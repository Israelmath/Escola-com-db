<ListaAlunosTela@Screen>:
    canvas.before:
        Color:
            rgba: 243/235,154/235,108/235,1
        Rectangle:
            pos: self.pos
            size: self.size
    BoxLayout:
        spacing: 1
        orientation: 'vertical'
        ActionBar:
            canvas:
                Color:
                    rgba: 74/245, 188/245, 150/245,1
                Rectangle:
                    pos: self.pos
                    size: self.size
            ActionView:
                ActionPrevious:
                    title: 'Lista aluno(a)'
                    color: 0.1,0.1,0.1
                    on_release: app.root.current = 'Tela inicial'
                ActionButton:
                    text: 'Sair'
                    color: 0.1,0.1,0.1
                    on_release: app.root.Sair()
        BoxLayout:
            orientation: 'horizontal'
            ScrollView:
                BoxLayout:
                    orientation: 'vertical'
                    spacing: 1
                    id: bigbox
                    size_hint_y: None 
                    height: self.minimum_height
                

<BuscaAlunoTela@Screen>:
    BoxLayout:
        spacing:7
        orientation: 'vertical'
        canvas:
            Color:
                rgb: 224/255,228/255,204/255
            Rectangle:
                pos: self.pos
                size: self.size
        ActionBar:
            canvas:
                Color:
                    rgb: 74/245, 188/245, 150/245
                Rectangle:
                    pos: self.pos
                    size: self.size
            ActionView:
                ActionPrevious:
                    title: 'Buscar aluno(a)'
                    color: 0.1,0.1,0.1
                    on_release: app.root.current = 'Tela inicial'
                ActionButton:
                    text: 'Sair'
                    color: 0.1,0.1,0.1
                    on_release: app.root.Sair()
        BoxLayout:
            orientation: 'vertical'
            BoxLayout:
                orientation: 'vertical'
                spacing: 20
                BgTextoDir:
                    text: 'Qual aluno deseja buscar?'
                    font_name: 'Fonts/UbuntuMono-R'
                    font_size: 29
                    size_hint_y: None
                    size_hint_x: None
                    width: 450
                    height: 60
                    pos_hint: {'top': 1}
                BoxLayout:
                    spacing: 5
                    size_hint_x: None
                    size_hint_y: None
                    width: 350
                    size_hint: 0.5,0.1
                    TextInput:
                        id: Aluno
                        hint_text:  'Digite qualquer informação do(a) aluno(a)'
                        multiline: False
                    Button:
                        background_normal: 'Images/procurar.png'
                        border: 0,0,0,0
                        size_hint: None, None
                        width: 39
                        height: 39
                        on_release: root.busca()
                BoxLayout:
                    ScrollView:
                        BoxLayout:
                            orientation: 'vertical'
                            spacing: 1
                            id: bigbox
                            size_hint_y: None 
                            height: self.minimum_height
                    ScrollView:
                        BoxLayout:
                            orientation: 'vertical'
                            spacing: 1
                            id: bigbox
                            size_hint_y: None 
                            height: self.minimum_height

                    
<BotaoInicial@ButtonBehavior+Label>
    canvas.before:
        Color:
            rgba: 235/235,149/235,50/235,1
        Ellipse:
            pos: self.pos
            size: self.height, self.height
        Ellipse:
            pos: self.x+self.width-self.height,self.y
            size: self.height, self.height
        Rectangle:
            pos: self.x+self.height/2.0, self.y
            size: self.width-self.height,self.height


<BgTextoDir@Label>
    canvas.before:
        Color:
            rgb: 250/255,105/255,0
        Ellipse:
            pos: self.x+self.width-40, self.y+self.height-40
            size: 40,40
        Ellipse:
            pos: self.x+self.width-40, self.y
            size: 40,40
        Rectangle:
            pos: self.x, self.y
            size: self.width-20, self.height
        Rectangle:
            pos: self.x+self.width-40, self.y+20
            size: 40,self.height-40

<BgTextoEsq@Label>
    canvas.before:
        Color:
            rgb: 250/255,105/255,0
        Ellipse:
            pos: self.pos
            size: 40,40
        Rectangle:
            pos: self.x+self.height/2, self.y
            size: self.width-self.height/2, self.height