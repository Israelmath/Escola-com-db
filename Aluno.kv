<BoxAluno>
    canvas.before:
        Color:
            rgba: 1,1,1,1
        Rectangle:
            pos: self.x, self.y
            size: self.width-self.height/2, self.height
        Ellipse:
            pos: self.x+self.width-self.height, self.y
            size: self.height, self.height
    size_hint_y: None
    size_hint_x: None
    height: 100
    width: 400
    

<BoxAlunoEsq>
